export {};

declare global {
  interface Window {
    electronAPI?: {
      saveFile?: (name: string, data: string) => Promise<{ success: boolean; path?: string; error?: string }>;
      loadFile?: (name: string) => Promise<{ success: boolean; data?: string | null; error?: string }>;
      invoke?: (channel: string, ...args: any[]) => Promise<{ success: boolean; res?: any; error?: string }>;
      listSaves?: () => Promise<{ success: boolean; data?: { name: string; updatedAt?: number; size?: number; path?: string }[]; error?: string }>;
    };
  }
}
