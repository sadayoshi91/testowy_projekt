import { ProjectRowEnhanced } from './components/ProjectList_enhanced';
import { ProjectDetails } from './components/ProjectDetails';
import { EmployeesList } from './components/EmployeesList';
import { AssignModal } from './components/AssignModal';
import { EventLog } from './components/EventLog';
import { FinancePanel } from './components/FinancePanel';
import { Toasts, ToastItem } from './components/Toast';
import { ConfirmationModal } from './components/ConfirmationModal';
import { BankruptcyModal } from './components/BankruptcyModal';
import { ErrorBoundary } from './components/ErrorBoundary';
import { OfficeGrid } from './components/OfficeGrid';
import { listMods } from '../services/ModLoader';
import { useEconomy } from './hooks/useEconomy';
import { usePayrollHelpers } from './hooks/usePayroll';
import { Project, Role } from '../models/project';
import { ContractsPanel } from './components/ContractsPanel';
import { Contract, ContractStatus } from '../models/contract';
import { TrainingsPanel } from './components/TrainingsPanel';
import { Training } from '../models/training';
import { ResearchPanel } from './components/ResearchPanel';
import { Research } from '../models/research';
import { FaFileContract, FaTasks, FaUsers, FaChalkboardTeacher, FaMoneyBill, FaListAlt, FaMoon, FaSun } from 'react-icons/fa';
import { OfficePanel } from './components/OfficePanel';
import { Office } from '../models/office';
import { CompetitorsPanel } from './components/CompetitorsPanel';
import { Competitor } from '../models/competitor';
import { GameEventsPanel } from './components/GameEventsPanel';
import { StatsPanel } from './components/StatsPanel';
import { MissionsPanel } from './components/MissionsPanel';

const DEFAULT_ROLES: Role[] = ['developer', 'designer'];
const DEFAULT_STATUS = 'active';

type ProjectStatus = 'active' | 'completed' | 'paused';

const App: React.FC = () => {
  const [company, setCompany] = useState<any>(createEmptyCompany());
  const [toasts, setToasts] = useState<ToastItem[]>([]);
  const [confirmProps, setConfirmProps] = useState<any>(null);
  const [bankruptOpen, setBankruptOpen] = useState(false);
  const [showAddProject, setShowAddProject] = useState(false);
  const [newProject, setNewProject] = useState({
    name: '',
    description: '',
    effort:100,
    reward:1000,
    requiredRoles: DEFAULT_ROLES,
  });
  const [editProjectId, setEditProjectId] = useState<string|null>(null);
  const [editProject, setEditProject] = useState<any>(null);
  const [filterStatus, setFilterStatus] = useState<string>('all');
  const [sortKey, setSortKey] = useState<string>('createdAt');
  const [activeTab, setActiveTab] = useState<string>('contracts');
  const [darkMode, setDarkMode] = useState(false);
  const [tickSpeed, setTickSpeed] = useState(1000); // domyślnie x1
  const [gameHour, setGameHour] = useState(8); // start od8:00
  const [gameDay, setGameDay] = useState(1);

  const tickManagerRef = useRef<any>(null);
  const hrRef = useRef<any>(null);
  const projectRef = useRef<any>(null);
  const econRef = useRef<any>(null);
  const economy = useEconomy(company, setCompany); 
  const getCompany = () => company;
  const { runPayroll: backupPayroll, exportPayroll: exportPayrollIPC } = usePayrollHelpers(setCompany, getCompany, (t: any) => {
        
        pushToast(t);
    });
  

  const menuTabs = [
    { key: 'contracts', label: 'Contracts', icon: <FaFileContract /> },
    { key: 'projects', label: 'Projects', icon: <FaTasks /> },
    { key: 'employees', label: 'Employees', icon: <FaUsers /> },
    { key: 'trainings', label: 'Trainings', icon: <FaChalkboardTeacher /> },
    { key: 'rnd', label: 'R&D', icon: <FaListAlt /> },
    { key: 'office', label: 'Office', icon: <FaUsers /> },
    { key: 'competitors', label: 'Competitors', icon: <FaListAlt /> },
    { key: 'events', label: 'Events', icon: <FaListAlt /> },
    { key: 'missions', label: 'Missions', icon: <FaListAlt /> },
    { key: 'stats', label: 'Stats', icon: <FaListAlt /> },
    { key: 'finance', label: 'Finance', icon: <FaMoneyBill /> },
    { key: 'log', label: 'Log', icon: <FaListAlt /> },
  ];

  if (!hrRef.current) hrRef.current = new HRSystem();
  if (!projectRef.current) projectRef.current = new ProjectSystem();
  if (!econRef.current) econRef.current = new EconomySystem(company?.payrollIntervalDays || 30);

  const pushToast = (t: Omit<ToastItem, 'id'>) => {
    const id = (Date.now()).toString(36) + Math.random().toString(36).slice(2,6);
    setToasts(s => [{ id, ...t }, ...s].slice(0, 6));
  };

  const openConfirmation = (props:any) => {
    setConfirmProps(props);
  };

  useEffect(() => {
    (async () => {
      const m = await listMods();
    })();
  }, []);

  const pushEvent = (msg: string) => {
    const stamp = new Date().toLocaleTimeString();
    setCompany((c:any) => ({ ...c, events: [`${stamp} — ${msg}`, ...(c.events||[])] }));
  };

  const pushProjectEvent = (msg: string) => {
    const stamp = new Date().toLocaleTimeString();
    setCompany((c: any) => ({ ...c, events: [`${stamp} — ${msg}`, ...(c.events||[])] }));
  };

  // Dodaj przykładowe biura do stanu początkowego, jeśli nie istnieją
React.useEffect(() => {
 if (!company.offices || company.offices.length ===0) {
 setCompany((c: any) => ({
 ...c,
 offices: [
 {
 id: 'office1',
 name: 'Small Office',
 rent:500,
 desks: [
 { id: 'desk1', name: 'Desk1' },
 { id: 'desk2', name: 'Desk2' }
 ],
 upgrades: [],
 owned: false
 },
 {
 id: 'office2',
 name: 'Large Office',
 rent:1500,
 desks: [
 { id: 'desk3', name: 'Desk3' },
 { id: 'desk4', name: 'Desk4' },
 { id: 'desk5', name: 'Desk5' }
 ],
 upgrades: [],
 owned: false
 }
 ]
 }));
 }
// eslint-disable-next-line
}, []);

React.useEffect(() => {
 if (!company.contracts || company.contracts.length ===0) {
 setCompany((c: any) => ({
 ...c,
 contracts: [
 { id: 'contract1', name: 'Basic Website', reward:2000, deadline: new Date(Date.now() +7*24*60*60*1000).toISOString(), requiredRoles: ['developer'], status: 'available', createdAt: new Date().toISOString(), minReputation:0 },
 { id: 'contract2', name: 'Corporate Portal', reward:5000, deadline: new Date(Date.now() +10*24*60*60*1000).toISOString(), requiredRoles: ['developer', 'designer'], status: 'available', createdAt: new Date().toISOString(), minReputation:120 },
 { id: 'contract3', name: 'Mobile App', reward:8000, deadline: new Date(Date.now() +14*24*60*60*1000).toISOString(), requiredRoles: ['developer', 'designer'], status: 'available', createdAt: new Date().toISOString(), minReputation:150 }
 ]
 }));
 }
// eslint-disable-next-line
}, []);

// Obsługa wynajmu biura
const handleRentOffice = (officeId: string) => {
 setCompany((c: any) => ({
 ...c,
 offices: (c.offices || []).map((o: Office) =>
 o.id === officeId ? { ...o, owned: true } : o
 ),
 selectedOfficeId: officeId
 }));
 pushToast({ type: 'success', message: 'Office rented' });
};

// Obsługa przypisywania pracownika do biurka
const handleAssignDesk = (officeId: string, deskId: string, employeeId: string) => {
 setCompany((c: any) => ({
 ...c,
 offices: (c.offices || []).map((o: Office) =>
 o.id !== officeId ? o : {
 ...o,
 desks: o.desks.map(d => d.id === deskId ? { ...d, assignedEmployeeId: employeeId } : d)
 }
 )
 }));
 pushToast({ type: 'info', message: 'Employee assigned to desk' });
};

// Obsługa ulepszenia biurka
const handleUpgradeDesk = (officeId: string, deskId: string, upgradeId: string) => {
 setCompany((c: any) => ({
 ...c,
 offices: (c.offices || []).map((o: Office) =>
 o.id !== officeId ? o : {
 ...o,
 desks: o.desks.map(d => d.id === deskId ? { ...d, upgrades: [{ id: upgradeId, name: 'Better Chair', effect: { productivity:10 } }] } : d)
 }
 )
 }));
 pushToast({ type: 'success', message: 'Desk upgraded' });
};

// Efekty ulepszeń na produktywność/morale (w tickCallback)
const applyOfficeEffects = (state: any) => {
 let updated = { ...state };
 (updated.offices || []).forEach((office: any) => {
 if (!office.owned) return;
 (office.desks || []).forEach((desk: any) => {
 if (!desk.assignedEmployeeId) return;
 const emp = (updated.employees || []).find((e: any) => e.id === desk.assignedEmployeeId);
 if (!emp) return;
 (desk.upgrades || []).forEach((upg: any) => {
 if (upg.effect?.productivity) emp.productivity += upg.effect.productivity;
 if (upg.effect?.morale) emp.morale += upg.effect.morale;
 });
 });
 });
 return updated;
};

  // System awansów: pracownicy zdobywają doświadczenie, mogą awansować
  function processPromotions(state: any) {
    let updated = { ...state };
    updated.employees = (updated.employees || []).map((e: any) => {
      let exp = e.experience ||0;
      exp +=1; // zdobywaj exp co tick
      let level = e.level;
      let prod = e.productivity;
      let morale = e.morale;
      let salary = e.salary;
      if (exp >=50 && level === 'junior') {
        level = 'mid'; prod +=10; morale +=5; salary +=100;
        updated.events = [`${new Date().toLocaleTimeString()} — PROMOTION: ${e.name} awansował na mid!`, ...(updated.events || [])];
      }
      if (exp >=120 && level === 'mid') {
        level = 'senior'; prod +=15; morale +=10; salary +=200;
        updated.events = [`${new Date().toLocaleTimeString()} — PROMOTION: ${e.name} awansował na senior!`, ...(updated.events || [])];
      }
      return { ...e, experience: exp, level, productivity: prod, morale, salary };
    });
    return updated;
  }

  useEffect(() => {
    if (tickManagerRef.current) {
      tickManagerRef.current.setTickRate(tickSpeed, (s:any)=> setCompany(s));
    }
  }, [tickSpeed]);

  // sort & filter projects
  const filteredSortedProjects = (company.projects || [])
    .filter((p: any) => filterStatus === 'all' || p.status === filterStatus)
    .sort((a: any, b: any) => {
      if (sortKey === 'name') return a.name.localeCompare(b.name);
      if (sortKey === 'status') return (a.status || '').localeCompare(b.status || '');
      if (sortKey === 'createdAt') return (a.createdAt || '').localeCompare(b.createdAt || '');
      return 0;
    });

  const filteredSortedContracts = (company.contracts || [])
    // .filter((p: any) => filterStatus === 'all' || p.status === filterStatus)
    // .sort((a: any, b: any) => {
    //   if (sortKey === 'name') return a.name.localeCompare(b.name);
    //   if (sortKey === 'status') return (a.status || '').localeCompare(b.status || '');
    //   if (sortKey === 'createdAt') return (a.createdAt || '').localeCompare(b.createdAt || '');
    //   return 0;
    // });

  const renderContractsTab = () => (
    <div>
      <h2>Contracts</h2>
      <ContractsPanel company={company} setCompany={setCompany} />
    </div>
  );

  const renderProjectsTab = () => (
    <div>
      <h2>Projects</h2>
      <button onClick={() => setShowAddProject(true)}>Add Project</button>
      <div>
        {filteredSortedProjects.map((project: Project) => (
          <ProjectRowEnhanced
            key={project.id}
            project={project}
            onEdit={() => handleEditProject(project)}
            onDelete={() => handleDeleteProject(project.id)}
            onStatusChange={(status) => handleStatusChange(project.id, status)}
            onAssign={(empId) => assignToProject(project.id, empId)}
            onUnassign={(empId) => unassignSpecific(project.id, empId)}
            darkMode={darkMode}
          />
        ))}
      </div>
      {filteredSortedProjects.length === 0 && <p>No projects found</p>}
    </div>
  );

  const renderEmployeesTab = () => (
    <div>
      <h2>Employees</h2>
      <EmployeesList employees={company.employees || []} darkMode={darkMode} />
    </div>
  );

  const renderTrainingsTab = () => (
    <div>
      <h2>Trainings</h2>
      <ErrorBoundary>
        <TrainingsPanel trainings={company.trainings || []} employees={company.employees || []} onStart={handleStartTraining} darkMode={darkMode} />
      </ErrorBoundary>
    </div>
  );

  const renderResearchTab = () => (
    <div>
      <h2>R&D</h2>
      <ResearchPanel researches={company.researches || []} onStart={handleStartResearch} onInvest={handleInvestResearch} darkMode={darkMode} />
    </div>
  );

  const renderFinanceTab = () => (
    <div>
      <h2>Finance</h2>
      <FinancePanel company={company} nextPayoutDays={econRef.current?.nextPayoutInDays(company)} runPayrollNow={runPayrollNow} exportPayroll={exportPayroll} updateSalary={updateSalary} openConfirmation={openConfirmation} darkMode={darkMode} />
    </div>
  );

  const renderLogTab = () => (
    <div>
      <h2>Log</h2>
      <EventLog events={(company.events || [])} darkMode={darkMode} />
    </div>
  );

  const renderCompetitorsTab = () => (
    <div>
      <h2>Competitors</h2>
      <CompetitorsPanel competitors={company.competitors || []} darkMode={darkMode} />
    </div>
  );

  const renderMissionsTab = () => (
    <div>
      <h2>Missions</h2>
      <MissionsPanel missions={company.missions || []} darkMode={darkMode} />
    </div>
  );

  const renderActiveTab = () => {
    switch (activeTab) {
      case 'contracts':
        return renderContractsTab();
      case 'projects':
        return renderProjectsTab();
      case 'employees':
        return renderEmployeesTab();
      case 'trainings':
        return renderTrainingsTab();
      case 'rnd':
        return renderResearchTab();
      case 'finance':
        return renderFinanceTab();
      case 'log':
        return renderLogTab();
      case 'office':
        return (
          <OfficePanel offices={company.offices || []} employees={company.employees || []} onRent={handleRentOffice} onAssignDesk={handleAssignDesk} onUpgradeDesk={handleUpgradeDesk} darkMode={darkMode} />
        );
      case 'competitors':
        return renderCompetitorsTab();
      case 'events':
        return (
          <GameEventsPanel events={company.gameEvents || []} darkMode={darkMode} />
        );
      case 'missions':
        return renderMissionsTab();
      case 'stats':
        return (
          <StatsPanel employees={company.employees || []} company={company} darkMode={darkMode} />
        );
      default:
        return null;
    }
  };


  const handlePause = () => {
    setTickSpeed(0);
    tickManagerRef.current?.stop();
  };
  const handleNormal = () => {
    setTickSpeed(1000);
  };
  const handleMedium = () => {
    setTickSpeed(333);
  };
  const handleFast = () => {
    setTickSpeed(200);
  };
  const handleStart = () => {
    console.log('START button clicked');
    if (tickManagerRef.current) {
      setTickSpeed(1000); // domyślna prędkość
      tickManagerRef.current.stop();
      tickManagerRef.current.start((s: any) => {
        console.log('tick');
        setCompany(s);
      });
    }
  };

  function filterContractsByReputation(state: any) {
    let updated = { ...state };
    const reputation = updated.reputation ??100;
    updated.contracts = (updated.contracts || []).map((ct: any) => {
      if (ct.minReputation && reputation < ct.minReputation) {
        return { ...ct, status: 'locked' };
      }
      if (ct.status === 'locked' && reputation >= (ct.minReputation ||0)) {
        return { ...ct, status: 'available' };
      }
      return ct;
    });
    return updated;
  }

  // Rozbudowa relacji z konkurencją na podstawie reputacji
function updateCompetitorRelations(state: any) {
 let updated = { ...state };
 const reputation = updated.reputation ??100;
 updated.competitors = (updated.competitors || []).map((comp: any) => {
 let relation = 'neutral';
 if (reputation > comp.reputation +20) relation = 'admire';
 else if (reputation < comp.reputation -20) relation = 'ignore';
 else if (Math.abs(reputation - comp.reputation) <=20) relation = 'rival';
 return { ...comp, relation };
 });
 return updated;
}

function updateMissions(state: any) {
 let updated = { ...state };
 updated.missions = (updated.missions || []).map((m: any) => {
 let progress = m.progress;
 if (m.type === 'reputation') progress = updated.reputation ||0;
 if (m.type === 'projects_completed') progress = (updated.projects || []).filter((p: any) => p.status === 'completed').length;
 if (m.type === 'funds') progress = updated.funds ||0;
 if (m.type === 'employees_hired') progress = (updated.employees || []).length;
 const completed = !m.completed && progress >= m.target;
 if (completed) {
 updated.events = [`${new Date().toLocaleTimeString()} — MISSION COMPLETE: ${m.description}`, ...(updated.events || [])];
 if (m.reward?.funds) updated.funds = (updated.funds ||0) + m.reward.funds;
 if (m.reward?.reputation) updated.reputation = (updated.reputation ||0) + m.reward.reputation;
 }
 return { ...m, progress, completed: m.completed || completed };
 });
 return updated;
}

  const tickCallback = (state: any): any => {
    const hr = hrRef.current!;
    const ps = projectRef.current!;
    const econ = econRef.current!;
    let updated = hr.tickCompany(state);
    updated = ps.tickProjects(updated);
    updated = econ.tickEconomy(updated);
    updated = applyOfficeEffects(updated);
    updated = maybeTriggerEvent(updated);
    updated = processPromotions(updated);
    updated = updateMissions(updated);
    updated = filterContractsByReputation(updated);
    updated = updateCompetitorRelations(updated);

    // Zmieniamy logikę czasu gry:1 tick =1 godzina
    let hour = (state.gameHour ?? gameHour) +1;
    let day = state.gameDay ?? gameDay;
    if (hour >23) {
      hour =0;
      day +=1;
    }
    updated.gameHour = hour;
    updated.gameDay = day;

    const empIncome = (updated.employees || []).reduce((acc:number, e:any) => {
      if ((e as any).onBreak) return acc;
      return acc + (e.productivity ||0);
    },0);
    updated.funds = +( (updated.funds ||0) + empIncome ).toFixed(2);
    updated.day = day; // day = liczba dni gry

    if ((updated.funds ||0) < -1000) {
      try { tickManagerRef.current?.stop(); } catch(e){}
      setBankruptOpen(true);
      pushToast({ type:'warning', title:'Bankruptcy', message:'Funds critically low, paused' });
    }

    return updated;
  };

  useEffect(() => {
    tickManagerRef.current = new TickManager(tickCallback, 1000);
    return () => tickManagerRef.current?.stop();
  }, []);

  const hire = (name='Dev', role:'developer'|'designer'|'marketer'|'researcher'='developer', level='junior', skill=50, salary=160) => {
    const hr = hrRef.current!;
    const emp = hr.hireEmployee(name, role as any, level as any, skill);
    (emp as any).salary = salary;
    setCompany((c:any) => ({ ...c, employees: [...(c.employees||[]), emp] }));
    pushToast({ type:'success', title:'Hire', message:`${emp.name} hired` });
  };

  const assignToProject = (projectId:string, employeeId?:string) => {
    const p = (company.projects||[]).find((x:any)=>x.id===projectId);
    if (!p) return;
    if (employeeId) {
      const emp = company.employees.find((e:any)=> e.id === employeeId);
      if (!emp) { pushToast({ type:'error', message:'Employee not found' }); return; }
      if ((p.assignees||[]).includes(employeeId)) { pushToast({ type:'warning', message:'Already assigned' }); return; }
      setCompany((c:any)=> ({ ...c, projects: (c.projects||[]).map((pr:any)=> pr.id===projectId? {...pr, assignees: [...(pr.assignees||[]), employeeId]}: pr) }));
      pushToast({ type:'info', message: `${emp.name} assigned` });
      return;
    }
    const free = (company.employees||[]).find((e:any)=> !(p.assignees||[]).includes(e.id));
    if (!free) { pushToast({ type:'warning', message:'No free employee' }); return; }
    setCompany((c:any)=> ({ ...c, projects: (c.projects||[]).map((pr:any)=> pr.id===projectId? {...pr, assignees: [...(pr.assignees||[]), free.id]}: pr) }));
    pushToast({ type:'info', message: `${free.name} auto-assigned` });
  };

  const unassignSpecific = (projectId:string, employeeId:string) => {
    setCompany((c:any)=> ({ ...c, projects: (c.projects||[]).map((pr:any)=> pr.id===projectId? {...pr, assignees: (pr.assignees||[]).filter((x:any)=> x!==employeeId)}: pr) }));
  };

  const fastForward = (n:number) => {
    if (!tickManagerRef.current) return;
    const snapshot = ('structuredClone' in window) ? (window as any).structuredClone(company) : JSON.parse(JSON.stringify(company));
    const res = tickManagerRef.current.runNTicks(snapshot, n);
    setCompany(res);
  };

    const runPayrollNow = () => {
        // use economy hook to run payroll (this will update company via setCompany)
        const res = economy.runPayrollNow();
        // start autosave/backup/export tasks
        try { backupPayroll(); } catch (e) { /* ignore */ }
        // open bankruptcy modal if needed
        if ((res?.funds || 0) < -1000) setBankruptOpen(true);
    };


    const exportPayroll = () => {
        // delegate to payroll helper which handles IPC and toasts
        exportPayrollIPC();
    };


  const updateSalary = (empId:string, salary:number) => {
    setCompany((c:any)=> ({ ...c, employees: (c.employees||[]).map((e:any)=> e.id===empId? {...e, salary}: e) }));
    pushToast({ type:'info', message:'Salary updated' });
  };

  const handleLoan = (amt:number) => {
    setCompany((c:any)=> ({ ...c, funds: (c.funds||0) + amt }));
    setBankruptOpen(false);
    pushToast({ type:'success', message: `Loan: +${amt}` });
  };

  const handleInvestor = () => {
    setCompany((c:any)=> ({ ...c, funds: (c.funds||0) + 5000 }));
    setBankruptOpen(false);
    pushToast({ type:'success', message: 'Investor +5000' });
  };

  const handleRollback = () => {
    setCompany((c:any)=> {
      const h = c.payrollHistory || [];
      if (h.length === 0) { pushToast({ type:'warning', message:'No payroll to rollback' }); return c; }
      const last = h[0];
      const funds = (c.funds||0) + (last.total || 0);
      return { ...c, funds, payrollHistory: h.slice(1) };
    });
    setBankruptOpen(false);
    pushToast({ type:'success', message:'Last payroll rolled back' });
  };

  // Funkcja do obsługi dodawania projektu
  const handleAddProject = () => {
    if (!newProject.name.trim()) {
      pushToast({ type: 'error', message: 'Project name required' });
      return;
    }
    const id = Date.now().toString(36) + Math.random().toString(36).slice(2,6);
    setCompany((c: any) => ({
      ...c,
      projects: [
        ...(c.projects || []),
        {
          id,
          name: newProject.name,
          description: newProject.description,
          effort: Number(newProject.effort),
          progress:0,
          reward: Number(newProject.reward),
          requiredRoles: newProject.requiredRoles,
          assignees: [],
          createdAt: new Date().toISOString(),
        },
      ],
    }));
    setShowAddProject(false);
    setNewProject({ name: '', description: '', effort:100, reward:1000, requiredRoles: DEFAULT_ROLES });
    pushToast({ type: 'success', message: 'Project created' });
    pushProjectEvent(`Project created: ${newProject.name}`);
  };

  // Funkcja do obsługi edytacji projektu
  const handleEditProject = (project: Project) => {
    setEditProjectId(project.id);
    setEditProject({ ...project });
    setShowAddProject(false);
   };

   const handleEditProjectSave = () => {
    if (!editProject.name.trim()) {
      pushToast({ type: 'error', message: 'Project name required' });
      return;
    }
    setCompany((c: any) => ({
      ...c,
      projects: (c.projects || []).map((p: Project) =>
        p.id === editProjectId ? { ...editProject } : p
      ),
    }));
    setEditProjectId(null);
    setEditProject(null);
    pushToast({ type: 'success', message: 'Project updated' });
    pushProjectEvent(`Project updated: ${editProject.name}`);
   };

   const handleEditProjectCancel = () => {
    setEditProjectId(null);
    setEditProject(null);
   };

  // Funkcja do obsługi usuwania projektu
  const handleDeleteProject = (projectId: String) => {
    if (!window.confirm('Are you sure you want to delete this project?')) return;
    setCompany((c: any) => ({
      ...c,
      projects: (c.projects || []).filter((p: Project) => p.id !== projectId),
    }));
    pushToast({ type: 'success', message: 'Project deleted' });
    pushProjectEvent(`Project deleted: ${projectId}`);
  };

  const handleStatusChange = (projectId: string, status: string) => {
    setCompany((c: any) => ({
      ...c,
      projects: (c.projects || []).map((p: any) =>
        p.id === projectId ? { ...p, status } : p
      ),
    }));
    pushToast({ type: 'info', message: `Status changed to ${status}` });
    const p = (company.projects||[]).find((x:any)=>x.id===projectId);
    if (p) {
      pushProjectEvent(`Project status changed: ${p.name} → ${status}`);
    }
  };

  // Obsługa rozpoczęcia szkolenia
const handleStartTraining = (trainingId: string, employeeId: string) => {
  setCompany((c: any) => {
    const training = (c.trainings || []).find((tr: Training) => tr.id === trainingId);
    if (!training || training.status !== 'available') return c;
    return {
      ...c,
      trainings: (c.trainings || []).map((tr: Training) =>
        tr.id === trainingId ? { ...tr, status: 'in_progress', assignedEmployeeId: employeeId, startedAt: new Date().toISOString(), startedDay: c.day } : tr
      ),
      employees: (c.employees || []).map((e: any) =>
        e.id === employeeId ? { ...e, onTraining: true } : e
      ),
    };
  });
  pushToast({ type: 'info', message: 'Training started' });
  pushProjectEvent(`Training started: ${trainingId} for employee ${employeeId}`);
};

// Obsługa rozpoczęcia badania
const handleStartResearch = (researchId: string) => {
  setCompany((c: any) => ({
    ...c,
    researches: (c.researches || []).map((r: Research) =>
      r.id === researchId ? { ...r, status: 'in_progress', startedDay: c.day } : r
    )
  }));
  pushToast({ type: 'info', message: 'Research started' });
  pushProjectEvent(`Research started: ${researchId}`);
};

// Obsługa inwestowania w badanie (płacenie kosztu)
const handleInvestResearch = (researchId: string) => {
  setCompany((c: any) => {
    const research = (c.researches || []).find((r: Research) => r.id === researchId);
    if (!research || research.status !== 'in_progress') return c;
    if ((c.funds ||0) < research.cost) {
      pushToast({ type: 'error', message: 'Not enough funds for research!' });
      return c;
    }
    return {
      ...c,
      funds: (c.funds ||0) - research.cost,
      researches: (c.researches || []).map((r: Research) =>
        r.id === researchId ? { ...r, invested: true } : r
      )
    };
  });
  pushToast({ type: 'success', message: 'Research investment paid' });
};


// Losowe eventy w tickCallback
const randomEvents = [
 {
 type: 'crisis', title: 'Market Crash', description: 'Global market crash affects your company!', effect: { funds: -2000, reputation: -10 }
 },
 {
 type: 'bonus', title: 'Tech Grant', description: 'You received a government tech grant!', effect: { funds:3000, reputation:5 }
 },
 {
 type: 'market_change', title: 'Trend Shift', description: 'Market trends shift, designers are in demand!', effect: { morale:10, productivity:5 }
 },
 {
 type: 'random', title: 'Team Building', description: 'Successful team building event boosts morale.', effect: { morale:15 }
 },
 // Nowe eventy
 {
 type: 'employee_sick', title: 'Employee Sick', description: 'One of your employees is sick and cannot work today.', effect: { employeeId: null, productivity: -20, morale: -10 }
 },
 {
 type: 'equipment_failure', title: 'Equipment Failure', description: 'A piece of office equipment failed, productivity drops.', effect: { productivity: -15, funds: -500 }
 },
 {
 type: 'investor_visit', title: 'Investor Visit', description: 'An investor visits your company and offers a bonus!', effect: { funds:2000, reputation:10, investorBonus:2000 }
 }
];

function maybeTriggerEvent(state: any) {
 if (Math.random() <0.10) { //10% szansa na event co tick
 let ev = randomEvents[Math.floor(Math.random() * randomEvents.length)];
 // obsługa losowego pracownika dla eventu choroby
 if (ev.type === 'employee_sick' && Array.isArray(state.employees) && state.employees.length >0) {
 const sickEmp = state.employees[Math.floor(Math.random() * state.employees.length)];
 ev = { ...ev, effect: { ...ev.effect, employeeId: sickEmp.id } };
 }
 const eventObj = {
 id: Date.now().toString(36) + Math.random().toString(36).slice(2,6),
 ...ev,
 day: state.day
 };
 // Zastosuj efekt eventu
 let updated = { ...state };
 if (ev.effect.funds) updated.funds = (updated.funds ||0) + ev.effect.funds;
 if (ev.effect.reputation) updated.reputation = (updated.reputation ||0) + ev.effect.reputation;
 if (ev.effect.morale) updated.employees = (updated.employees || []).map((e: any) => ({ ...e, morale: (e.morale ||0) + ev.effect.morale }));
 if (ev.effect.productivity) {
 if (ev.type === 'employee_sick' && ev.effect.employeeId) {
 updated.employees = (updated.employees || []).map((e: any) => e.id === ev.effect.employeeId ? { ...e, productivity: Math.max(0, (e.productivity ||0) + ev.effect.productivity), morale: (e.morale ||0) + ev.effect.morale } : e);
 } else {
 updated.employees = (updated.employees || []).map((e: any) => ({ ...e, productivity: Math.max(0, (e.productivity ||0) + ev.effect.productivity) }));
 }
 }
 updated.gameEvents = [eventObj, ...(updated.gameEvents || [])];
 updated.events = [`${new Date().toLocaleTimeString()} — EVENT: ${ev.title} (${ev.description})`, ...(updated.events || [])];
 return updated;
 }
 return state;
}

  return (
    <div style={{ position: 'relative', display: 'flex', flexDirection: 'column', minHeight: '100vh', background: darkMode ? '#181818' : '#f5f5f5', color: darkMode ? '#fff' : '#222', transition: 'background0.3s, color0.3s' }}>
      <div style={{ position:'absolute', left:24, top:24, zIndex:10001, display:'flex', flexDirection:'column', gap:8 }}>
         <div style={{ fontWeight:700, fontSize:18 }}>Day: {company.gameDay ?? gameDay} | Hour: {(company.gameHour ?? gameHour).toString().padStart(2,'0')}:00</div>
         <div style={{ display:'flex', gap:8 }}>
 <button style={{padding:'6px16px', fontWeight:600, background: tickSpeed ===0 ? '#ffa4a4' : undefined}} onClick={handlePause}>Pause</button>
 <button style={{padding:'6px16px', fontWeight:600, background: tickSpeed ===1000 ? '#e0e0e0' : undefined}} onClick={handleNormal}>x1</button>
 <button style={{padding:'6px16px', fontWeight:600, background: tickSpeed ===333 ? '#e0e0e0' : undefined}} onClick={handleMedium}>x3</button>
 <button style={{padding:'6px16px', fontWeight:600, background: tickSpeed ===200 ? '#e0e0e0' : undefined}} onClick={handleFast}>x5</button>
 <button style={{padding:'6px16px', fontWeight:600, background: tickSpeed ===0 ? '#4caf50' : (tickSpeed >0 ? '#4caf50' : '#eee'), color: tickSpeed ===0 ? '#fff' : (tickSpeed >0 ? '#fff' : '#222'), border:'none', borderRadius:4}} onClick={handleStart}>Start</button>
</div>
       </div>
      <h1 style={{ margin: '24px012px0', textAlign: 'center' }}>Business Simulation Game</h1>
      <div style={{ flex:1, display: 'flex', justifyContent: 'center', alignItems: 'flex-start', gap:24, paddingBottom:60 }}>
        <div style={{ width:900, maxWidth: '100%' }}>
          {renderActiveTab()}
        </div>
      </div>
      {/* MENU NA DOLE */}
      <div style={{ position:'fixed', left:0, right:0, bottom:0, background: darkMode ? '#222' : '#fff', color: darkMode ? '#fff' : '#222', display:'flex', justifyContent:'center', gap:24, padding:'10px0', zIndex:10000, borderTop: darkMode ? '1px solid #333' : '1px solid #ddd', boxShadow:'0 -2px8px rgba(0,0,0,0.04)' }}>
 {menuTabs.map(tab => (
 <button
 key={tab.key}
 onClick={() => setActiveTab(tab.key)}
 title={tab.label}
 style={{
 background: activeTab === tab.key ? (darkMode ? '#444' : '#eee') : 'transparent',
 color: activeTab === tab.key ? (darkMode ? '#fff' : '#222') : (darkMode ? '#bbb' : '#888'),
 border: 'none',
 borderRadius:4,
 padding: '6px18px',
 fontWeight: activeTab === tab.key ?700 :400,
 fontSize:16,
 cursor: 'pointer',
 boxShadow: activeTab === tab.key ? '02px8px rgba(0,0,0,0.08)' : 'none',
 transition: 'all0.2s',
 display: 'flex', alignItems: 'center', gap:8,
 position: 'relative',
 }}
 >
 {tab.icon}
 <span>{tab.label}</span>
 </button>
 ))}
 <button
 onClick={() => setDarkMode(d => !d)}
 title={darkMode ? 'Light mode' : 'Dark mode'}
 style={{
 background: 'transparent', color: darkMode ? '#ffd700' : '#222', border: 'none', borderRadius:4, padding: '6px18px', fontSize:18, cursor: 'pointer', marginLeft:24
 }}
 >
 {darkMode ? <FaSun /> : <FaMoon />}
 </button>
 </div>
 <Toasts list={toasts} onRemove={(id)=> setToasts(s=> s.filter(x=> x.id!==id))} darkMode={darkMode} />
 {confirmProps && (
 <ConfirmationModal
 {...confirmProps}
 onClose={() => setConfirmProps(null)}
 />
 )}
 {bankruptOpen && (
 <BankruptcyModal
 company={company}
 onClose={() => setBankruptOpen(false)}
 onLoan={handleLoan}
 onInvestor={handleInvestor}
 onRollback={handleRollback}
 />
 )}
 </div>
  );
};

export default App;
