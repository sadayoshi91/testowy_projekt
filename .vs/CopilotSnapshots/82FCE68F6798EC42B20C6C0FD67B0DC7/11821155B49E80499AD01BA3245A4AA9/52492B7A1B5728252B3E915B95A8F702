// src/app/components/EmployeesList.tsx
import React from 'react';
import { Employee } from '../../models/employee';

export function EmployeesList({ employees, darkMode }: { employees: Employee[], darkMode?: boolean }) {
 return (
 <div style={{ border: '1px solid', borderColor: darkMode ? '#444' : '#ccc', borderRadius:6, padding:8, background: darkMode ? '#232323' : '#fff', marginBottom:8, color: darkMode ? '#fff' : '#222' }}>
 {employees.length ===0 && <div style={{ color: darkMode ? '#aaa' : '#777' }}>No employees</div>}
 {employees.map(emp => (
 <div key={emp.id} style={{ borderBottom: '1px solid', borderColor: darkMode ? '#333' : '#eee', marginBottom:8, paddingBottom:8 }}>
 <div><strong>{emp.name}</strong> <small>({emp.role})</small> <span style={{ color: darkMode ? '#aaa' : '#888', fontSize:12 }}>{emp.level}</span></div>
 <div style={{ fontSize:13, color: darkMode ? '#ccc' : '#555' }}>Prod: {emp.productivity} • Morale: {emp.morale}</div>
 {emp.unlockedRoles && emp.unlockedRoles.length >0 && (
 <div style={{ fontSize:12, color: '#0a0' }}>Unlocked roles: {emp.unlockedRoles.join(', ')}</div>
 )}
 {emp.trainingHistory && emp.trainingHistory.length >0 && (
 <div style={{ fontSize:12, color: '#0077cc' }}>Training history: {emp.trainingHistory.join(', ')}</div>
 )}
 {emp.trait && (
 <div style={{ fontSize:12, color: '#f0a500' }}>
 Trait: <strong>{emp.trait}</strong>
 {emp.traitDescription ? ` — ${emp.traitDescription}` : ''}
 </div>
 )}
 </div>
 ))}
 </div>
 );
}
