  const validateSaveName = useCallback((value: string) => {
    if (!value || !value.trim()) return 'Save name is required';
    if (!SAVE_NAME_REGEX.test(value.trim())) {
      return 'Use 3-32 letters, numbers, dash or underscore';
    }
    return null;
