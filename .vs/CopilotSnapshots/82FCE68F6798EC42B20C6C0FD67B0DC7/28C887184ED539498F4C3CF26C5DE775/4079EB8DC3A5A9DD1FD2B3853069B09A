        <h2>Global Events</h2>
      </div>
      <GameEventsPanel events={company.gameEvents || []} darkMode={darkMode} />
    </section>
  );
 
   const renderOfficeTab = () => (
     <>
      <section className="panel-card">
        <div className="panel-header">
          <h2>Workspace Map</h2>
        </div>
        <OfficeMap offices={company.offices || []} employees={company.employees || []} onRent={handleRentOffice} onAssignDesk={handleAssignDesk} darkMode={darkMode} />
      </section>
      <section className="panel-card">
        <OfficePanel
          offices={company.offices || []}
          employees={company.employees || []}
          onRent={handleRentOffice}
          onAssignDesk={handleAssignDesk}
          onUpgradeDesk={handleUpgradeDesk}
          darkMode={darkMode}
        />
      </section>
    </>
  );
 
   const renderActiveTab = () => {
     switch (activeTab) {
      case 'contracts':
        return renderContractsTab();
      case 'projects':
        return renderProjectsTab();
      case 'employees':
        return renderEmployeesTab();
      case 'trainings':
        return renderTrainingsTab();
      case 'rnd':
        return renderResearchTab();
      case 'finance':
        return renderFinanceTab();
      case 'log':
        return renderLogTab();
      case 'office':
        return renderOfficeTab();
      case 'competitors':
        return renderCompetitorsTab();
      case 'events':
        return renderEventsTab();
      case 'missions':
        return renderMissionsTab();
      case 'stats':
        return renderStatsTab();
      default:
        return null;
    }
  };

  const handlePause = () => {
    setTickSpeed(0);
    tickManagerRef.current?.stop();
  };
  const handleNormal = () => {
    setTickSpeed(1000);
  };
  const handleMedium = () => {
    setTickSpeed(333);
  };
  const handleFast = () => {
    setTickSpeed(200);
  };
  const handleStart = () => {
    if (tickManagerRef.current) {
      setTickSpeed(1000); // domyślna prędkość
      tickManagerRef.current.stop();
      tickManagerRef.current.start((s: any) => {
        setCompany(s);
      });
    }
  };

  const handleSaveGame = async () => {
    if (typeof window === 'undefined') return;
    const saveName = window.prompt('Enter save name', 'autosave');
    if (!saveName) return;
    try {
      const payload = JSON.stringify(company);
      if (window.electronAPI?.saveFile) {
        const res = await window.electronAPI.saveFile(saveName, payload);
        if (!res?.success) throw new Error(res?.error || 'Unknown error');
        pushToast({ type: 'success', message: `Game saved: ${saveName}` });
      } else {
        localStorage.setItem(`save_${saveName}`, payload);
        pushToast({ type: 'success', message: `Game saved locally: ${saveName}` });
      }
      if (saveName === 'autosave') setCanContinue(true);
    } catch (err: any) {
      console.error('Save game error', err);
      pushToast({ type: 'error', message: `Save failed: ${err?.message || err}` });
    }
  };

  const handleLoadGame = async (presetName?: string, options?: { silent?: boolean }): Promise<boolean> => {
    if (typeof window === 'undefined') return false;
    let saveName = presetName;
    if (!saveName) {
      if (options?.silent) return false;
      const promptResult = window.prompt('Enter save name to load', 'autosave');
      if (!promptResult) return false;
      saveName = promptResult;
    }
    try {
      let data: string | null = null;
      if (window.electronAPI?.loadFile) {
        const res = await window.electronAPI.loadFile(saveName);
        if (!res?.success) throw new Error(res?.error || 'Unknown error');
        data = typeof res.data === 'string' ? res.data : null;
      } else {
        data = localStorage.getItem(`save_${saveName}`);
      }
      if (!data) throw new Error('Save not found');
      const parsed = JSON.parse(data);
      const normalized = normalizeCompanyState(parsed);
      const needsContracts = !(normalized.contracts || []).some((c: any) => c.status === 'available' || c.status === 'locked');
      const hydrated = needsContracts ? refreshContracts(normalized, true) : normalized;
      setCompany(hydrated);
      setCanContinue(true);
      if (!options?.silent) {
        pushToast({ type: 'success', message: `Game loaded: ${saveName}` });
      }
      return true;
    } catch (err: any) {
      console.error('Load game error', err);
      if (!options?.silent) {
        pushToast({ type: 'error', message: `Load failed: ${err?.message || err}` });
      }
      return false;
    }
  };

  const persistGame = useCallback(async (saveName: string, options?: { silent?: boolean }) => {
    const trimmed = saveName.trim();
    const validation = validateSaveName(trimmed);
    if (validation) {
      setSaveNameError(validation);
      pushToast({ type: 'error', message: validation });
      return false;
    }
    const payload = JSON.stringify({ ...company, saveVersion: SAVE_VERSION, lastSavedAt: new Date().toISOString() });
    try {
      if (window.electronAPI?.saveFile) {
        const res = await window.electronAPI.saveFile(trimmed, payload);
        if (!res?.success) throw new Error(res?.error || 'Unknown error');
      } else if (typeof window !== 'undefined' && window.localStorage) {
        window.localStorage.setItem(`save_${trimmed}`, payload);
      } else {
        throw new Error('No save backend available');
      }
      if (!options?.silent) {
        pushToast({ type: 'success', message: `Game saved: ${trimmed}` });
      }
      setCanContinue(true);
      if (showSaveModal) fetchSaveSlots();
      return true;
    } catch (err: any) {
      console.error('Save game error', err);
      pushToast({ type: 'error', message: `Save failed: ${err?.message || err}` });
      return false;
    }
  }, [company, validateSaveName, pushToast, fetchSaveSlots, showSaveModal]);
 
   useEffect(() => {
    const detectAutosave = async () => {
      try {
        if (typeof window === 'undefined') return;
        if (window.electronAPI?.loadFile) {
          const res = await window.electronAPI.loadFile('autosave');
          if (res?.success && res.data) setCanContinue(true);
        } else if (localStorage.getItem('save_autosave')) {
          setCanContinue(true);
        }
      } catch (err) {
        console.warn('Autosave detection failed', err);
      }
    };
    detectAutosave();
  }, []);

  useEffect(() => {
    if (showSaveModal) {
      fetchSaveSlots();
    } else {
      setSaveNameInput('');
      setSaveNameError(null);
    }
  }, [showSaveModal, fetchSaveSlots]);

  const handleQuickSave = async () => {
    setSaveBusy(true);
    try {
      const success = await persistGame('autosave', { silent: true });
      if (success) {
        pushToast({ type: 'success', message: 'Autosave updated' });
      }
    } finally {
      setSaveBusy(false);
    }
  };

  const handleCreateSave = async () => {
    const name = saveNameInput.trim();
    const validation = validateSaveName(name);
    if (validation) {
      setSaveNameError(validation);
      pushToast({ type: 'error', message: validation });
      return;
    }
    setSaveBusy(true);
    try {
      const success = await persistGame(name);
      if (success) {
        setSaveNameInput('');
        setSaveNameError(null);
      }
    } finally {
      setSaveBusy(false);
    }
  };

  const handleLoadSlot = async (name: string) => {
    const success = await handleLoadGame(name);
    if (success) {
      setShowSaveModal(false);
    }
  };

  function filterContractsByReputation(state: any) {
    let updated = { ...state };
    const reputation = updated.reputation ??100;
    updated.contracts = (updated.contracts || []).map((ct: any) => {
      if (ct.minReputation && reputation < ct.minReputation) {
        return { ...ct, status: 'locked' };
      }
      if (ct.status === 'locked' && reputation >= (ct.minReputation ||0)) {
        return { ...ct, status: 'available' };
      }
      return ct;
    });
    return updated;
  }

  // Rozbudowa relacji z konkurencją na podstawie reputacji
function updateCompetitorRelations(state: any) {
 let updated = { ...state };
 const reputation = updated.reputation ??100;
 updated.competitors = (updated.competitors || []).map((comp: any) => {
 let relation = 'neutral';
 if (reputation > comp.reputation +20) relation = 'admire';
 else if (reputation < comp.reputation -20) relation = 'ignore';
 else if (Math.abs(reputation - comp.reputation) <=20) relation = 'rival';
 return { ...comp, relation };
 });
 return updated;
}

function updateMissions(state: any) {
 let updated = { ...state };
 updated.missions = (updated.missions || []).map((m: any) => {
 let progress = m.progress;
 if (m.type === 'reputation') progress = updated.reputation ||0;
 if (m.type === 'projects_completed') progress = (updated.projects || []).filter((p: any) => p.status === 'completed').length;
 if (m.type === 'funds') progress = updated.funds ||0;
 if (m.type === 'employees_hired') progress = (updated.employees || []).length;
 const completed = !m.completed && progress >= m.target;
 if (completed) {
 updated.events = [`${new Date().toLocaleTimeString()} — MISSION COMPLETE: ${m.description}`, ...(updated.events || [])];
 if (m.reward?.funds) updated.funds = (updated.funds ||0) + m.reward.funds;
 if (m.reward?.reputation) updated.reputation = (updated.reputation ||0) + m.reward.reputation;
 }
 return { ...m, progress, completed: m.completed || completed };
 });
 return updated;
}

  const applyTrainingProgress = (state: any) => {
    const trainings: Training[] = state.trainings || [];
    if (!trainings.length) return state;
    const updated = { ...state };
    const employees = [...(updated.employees || [])];
    let employeesChanged = false;
    const currentDay = updated.day ?? 1;

    updated.trainings = trainings.map(training => {
      if (training.status !== 'in_progress') return training;
      const duration = Math.max(1, training.durationDays || 1);
      const startedDay = training.startedDay ?? currentDay;
      const elapsed = Math.max(0, currentDay - startedDay);
      const progress = Math.min(1, elapsed / duration);
      let nextTraining = { ...training, progress, startedDay };

      if (elapsed >= duration) {
        nextTraining = { ...nextTraining, status: 'completed', completedDay: currentDay, progress: 1 };
        if (nextTraining.assignedEmployeeId) {
          const idx = employees.findIndex((e: any) => e.id === nextTraining.assignedEmployeeId);
          if (idx >= 0) {
            const emp = { ...employees[idx], onTraining: false };
            const skillKey = ROLE_SKILL_MAP[nextTraining.role];
            if (skillKey) {
              const currentSkill = emp.skills?.[skillKey] ?? 0;
              const skills = { ...emp.skills, [skillKey]: Math.min(100, currentSkill + (nextTraining.skillGain || 0)) };
              emp.skills = skills;
            }
            if (nextTraining.moraleGain) {
              emp.morale = Math.min(100, (emp.morale || 0) + nextTraining.moraleGain);
            }
            if (nextTraining.newRole) {
              const unlocked = new Set(emp.unlockedRoles || []);
              unlocked.add(nextTraining.newRole);
              emp.unlockedRoles = Array.from(unlocked);
            }
            emp.trainingHistory = [nextTraining.name, ...(emp.trainingHistory || [])];
            if (hrRef.current?.computeProductivity) {
              emp.productivity = hrRef.current.computeProductivity(emp);
            }
            employees[idx] = emp;
            employeesChanged = true;
          }
        }
        updated.events = [`${new Date().toLocaleTimeString()} — TRAINING COMPLETE: ${nextTraining.name}`, ...(updated.events || [])];
      }
      return nextTraining;
    });

    if (employeesChanged) {
      updated.employees = employees;
    }

    return updated;
  };

  const applyResearchProgress = (state: any) => {
    const researches: Research[] = state.researches || [];
    if (!researches.length) return state;
    const updated = { ...state };
    const currentDay = updated.day ?? 1;

    updated.researches = researches.map(research => {
      if (research.status !== 'in_progress') return research;
      const duration = Math.max(1, research.durationDays || 1);
      const startedDay = research.startedDay ?? currentDay;
      const elapsed = Math.max(0, currentDay - startedDay);
      const progress = Math.min(1, elapsed / duration);
      let nextResearch = { ...research, progress, startedDay };

      if (elapsed >= duration) {
        nextResearch = { ...nextResearch, status: 'completed', completedDay: currentDay, progress: 1 };
        const unlocks = Array.from(new Set([...(updated.unlockedTechnologies || []), ...(research.unlocks || [])]));
        updated.unlockedTechnologies = unlocks;
        if (research.id === 'res-market-ai') {
          updated.reputation = (updated.reputation || 0) + 5;
        }
        updated.events = [`${new Date().toLocaleTimeString()} — RESEARCH COMPLETE: ${research.name}`, ...(updated.events || [])];
      }

      return nextResearch;
    });

    return updated;
  };

  const tickCallback = (state: any): any => {
    const hr = hrRef.current!;
    const ps = projectRef.current!;
    const econ = econRef.current!;
    let updated = hr.tickCompany(state);
    updated = ps.tickProjects(updated);
    updated = econ.tickEconomy(updated);
    updated = applyOfficeEffects(updated);
    updated = maybeTriggerEvent(updated);
    updated = processPromotions(updated);
    updated = updateMissions(updated);
    updated = filterContractsByReputation(updated);
    updated = updateCompetitorRelations(updated);
    updated = applyTrainingProgress(updated);
    updated = applyResearchProgress(updated);
    updated = syncContractsWithProjects(updated);
    updated = simulateCompetitors(updated);
    updated = refreshContracts(updated);

    // Zmieniamy logikę czasu gry:1 tick =1 godzina
    let hour = (state.gameHour ?? gameHour) +1;
    let day = state.gameDay ?? gameDay;
    if (hour >23) {
      hour =0;
      day +=1;
    }
    updated.gameHour = hour;
    updated.gameDay = day;

    const empIncome = (updated.employees || []).reduce((acc:number, e:any) => {
      if ((e as any).onBreak) return acc;
      return acc + (e.productivity ||0);
    },0);
    updated.funds = +( (updated.funds ||0) + empIncome ).toFixed(2);
    updated.day = day; // day = liczba dni gry

    if ((updated.funds ||0) < -1000) {
      try { tickManagerRef.current?.stop(); } catch(e){}
      setBankruptOpen(true);
      pushToast({ type:'warning', title:'Bankruptcy', message:'Funds critically low, paused' });
    }

    return updated;
  };

  useEffect(() => {
    tickManagerRef.current = new TickManager(tickCallback, 1000);
    return () => tickManagerRef.current?.stop();
  }, []);

  const hire = (name='Dev', role:'developer'|'designer'|'marketer'|'researcher'='developer', level='junior', skill=50, salary=160) => {
    const hr = hrRef.current!;
    const emp = hr.hireEmployee(name, role as any, level as any, skill);
    (emp as any).salary = salary;
    setCompany((c:any) => ({ ...c, employees: [...(c.employees||[]), emp] }));
    pushToast({ type:'success', title:'Hire', message:`${emp.name} hired` });
  };

  const randomEmployeeName = () => `${pickRandom(EMPLOYEE_FIRST_NAMES)} ${pickRandom(EMPLOYEE_LAST_NAMES)}`;

  const handleHireSubmit = () => {
    const level = newHireLevel;
    const salary = Math.max(80, newHireSalary || SALARY_BY_LEVEL[level]);
    const skill = SKILL_BY_LEVEL[level];
    const name = newHireName.trim() || randomEmployeeName();
    hire(name, newHireRole, level, skill, salary);
    setNewHireName('');
    setNewHireSalary(SALARY_BY_LEVEL[level]);
  };


  const assignToProject = (projectId:string, employeeId?:string) => {
    const p = (company.projects||[]).find((x:any)=>x.id===projectId);
    if (!p) return;
    if (employeeId) {
      const emp = company.employees.find((e:any)=> e.id === employeeId);
      if (!emp) { pushToast({ type:'error', message:'Employee not found' }); return; }
      if ((p.assignees||[]).includes(employeeId)) { pushToast({ type:'warning', message:'Already assigned' }); return; }
      setCompany((c:any)=> ({ ...c, projects: (c.projects||[]).map((pr:any)=> pr.id===projectId? {...pr, assignees: [...(pr.assignees||[]), employeeId]}: pr) }));
      pushToast({ type:'info', message: `${emp.name} assigned` });
      return;
    }
    const free = (company.employees||[]).find((e:any)=> !(p.assignees||[]).includes(e.id));
    if (!free) { pushToast({ type:'warning', message:'No free employee' }); return; }
    setCompany((c:any)=> ({ ...c, projects: (c.projects||[]).map((pr:any)=> pr.id===projectId? {...pr, assignees: [...(pr.assignees||[]), free.id]}: pr) }));
    pushToast({ type:'info', message: `${free.name} auto-assigned` });
  };

  const unassignSpecific = (projectId:string, employeeId:string) => {
    setCompany((c:any)=> ({ ...c, projects: (c.projects||[]).map((pr:any)=> pr.id===projectId? {...pr, assignees: (pr.assignees||[]).filter((x:any)=> x!==employeeId)}: pr) }));
  };

  const unassignLastFromProject = (projectId: string) => {
    const target = (company.projects || []).find((p: any) => p.id === projectId);
    if (!target || !(target.assignees || []).length) {
      pushToast({ type: 'warning', message: 'No assignees to unassign' });
      return;
    }
    const lastEmpId = target.assignees[target.assignees.length - 1];
    unassignSpecific(projectId, lastEmpId);
  };
 
   const fastForward = (n:number) => {
    if (!tickManagerRef.current) return;
    const snapshot = ('structuredClone' in window) ? (window as any).structuredClone(company) : JSON.parse(JSON.stringify(company));
    const res = tickManagerRef.current.runNTicks(snapshot, n);
    setCompany(res);
  };

    const runPayrollNow = () => {
        // use economy hook to run payroll (this will update company via setCompany)
        const res = economy.runPayrollNow();
        // start autosave/backup/export tasks
        try { backupPayroll(); } catch ( e) { /* ignore */ }
        // open bankruptcy modal if needed
        if ((res?.funds || 0) < -1000) setBankruptOpen(true);
    };


    const exportPayroll = () => {
        // delegate to payroll helper which handles IPC and toasts
        exportPayrollIPC();
    }


  const updateSalary = (empId:string, salary:number) => {
    setCompany((c:any)=> ({ ...c, employees: (c.employees||[]).map((e:any)=> e.id===empId? {...e, salary}: e) }));
    pushToast({ type:'info', message:'Salary updated' });
  };

  const handleLoan = (amt:number) => {
    setCompany((c:any)=> ({ ...c, funds: (c.funds||0) + amt }));
    setBankruptOpen(false);
    pushToast({ type:'success', message: `Loan: +${amt}` });
  };

  const handleInvestor = () => {
    setCompany((c:any)=> ({ ...c, funds: (c.funds||0) + 5000 }));
    setBankruptOpen(false);
    pushToast({ type:'success', message: 'Investor +5000' });
  };

  const handleRollback = () => {
    setCompany((c:any)=> {
      const h = c.payrollHistory || [];
      if (h.length === 0) { pushToast({ type:'warning', message:'No payroll to rollback' }); return c; }
      const last = h[0];
      const funds = (c.funds||0) + (last.total || 0);
      return { ...c, funds, payrollHistory: h.slice(1) };
    });
    setBankruptOpen(false);
    pushToast({ type:'success', message:'Last payroll rolled back' });
  };

  // Funkcja do obsługi dodawania projektu
  const handleAddProject = () => {
    if (!newProject.name.trim()) {
      pushToast({ type: 'error', message: 'Project name required' });
      return;
    }
    const id = Date.now().toString(36) + Math.random().toString(36).slice(2,6);
    setCompany((c: any) => ({
      ...c,
      projects: [
        ...(c.projects || []),
        {
          id,
          name: newProject.name,
          description: newProject.description,
          effort: Number(newProject.effort),
          progress: 0,
          reward: Number(newProject.reward),
          requiredRoles: newProject.requiredRoles,
          assignees: [],
          createdAt: new Date().toISOString(),
        },
      ],
    }));
    setShowAddProject(false);
    setNewProject({ name: '', description: '', effort:100, reward:1000, requiredRoles: DEFAULT_ROLES });
    pushToast({ type: 'success', message: 'Project created' });
    pushProjectEvent(`Project created: ${newProject.name}`);
  };

  // Funkcja do obsługi edytacji projektu
  const handleEditProject = (project: Project) => {
    setEditProjectId(project.id);
    setEditProject({ ...project });
    setShowAddProject(false);
   };

   const handleEditProjectSave = () => {
    if (!editProject.name.trim()) {
      pushToast({ type: 'error', message: 'Project name required' });
      return;
    }
    setCompany((c: any) => ({
      ...c,
      projects: (c.projects || []).map((p: Project) =>
        p.id === editProjectId ? { ...editProject } : p
      ),
    }));
    setEditProjectId(null);
    setEditProject(null);
    pushToast({ type: 'success', message: 'Project updated' });
    pushProjectEvent(`Project updated: ${editProject.name}`);
   };

   const handleEditProjectCancel = () => {
    setEditProjectId(null);
    setEditProject(null);
   };

  // Funkcja do obsługi usuwania projektu
  const handleDeleteProject = (projectId: String) => {
    if (!window.confirm('Are you sure you want to delete this project?')) return;
    setCompany((c: any) => ({
      ...c,
      projects: (c.projects || []).filter((p: Project) => p.id !== projectId),
    }));
    pushToast({ type: 'success', message: 'Project deleted' });
    pushProjectEvent(`Project deleted: ${projectId}`);
  };

  const handleStatusChange = (projectId: string, status: string) => {
    setCompany((c: any) => ({
      ...c,
      projects: (c.projects || []).map((p: any) =>
        p.id === projectId ? { ...p, status } : p
      ),
    }));
    pushToast({ type: 'info', message: `Status changed to ${status}` });
    const p = (company.projects||[]).find((x:any)=>x.id===projectId);
    if (p) {
      pushProjectEvent(`Project status changed: ${p.name} → ${status}`);
    }
  };

  // Obsługa rozpoczęcia szkolenia
const handleStartTraining = (trainingId: string, employeeId: string) => {
  setCompany((c: any) => {
    const training = (c.trainings || []).find((tr: Training) => tr.id === trainingId);
    if (!training || training.status !== 'available') return c;
    return {
      ...c,
      trainings: (c.trainings || []).map((tr: Training) =>
        tr.id === trainingId ? { ...tr, status: 'in_progress', assignedEmployeeId: employeeId, startedAt: new Date().toISOString(), startedDay: c.day, progress: 0 } : tr
      ),
      employees: (c.employees || []).map((e: any) =>
        e.id === employeeId ? { ...e, onTraining: true } : e
      ),
    };
  });
  pushToast({ type: 'info', message: 'Training started' });
  pushProjectEvent(`Training started: ${trainingId} for employee ${employeeId}`);
};

// Obsługa rozpoczęcia badania
const handleStartResearch = (researchId: string) => {
  setCompany((c: any) => ({
    ...c,
    researches: (c.researches || []).map((r: Research) =>
      r.id === researchId ? { ...r, status: 'in_progress', startedDay: c.day } : r
    )
  }));
  pushToast({ type: 'info', message: 'Research started' });
  pushProjectEvent(`Research started: ${researchId}`);
};

// Obsługa inwestowania w badanie (płacenie kosztu)
const handleInvestResearch = (researchId: string) => {
  setCompany((c: any) => {
    const research = (c.researches || []).find((r: Research) => r.id === researchId);
    if (!research || research.status !== 'in_progress') return c;
    if ((c.funds ||0) < research.cost) {
      pushToast({ type: 'error', message: 'Not enough funds for research!' });
      return c;
    }
    return {
      ...c,
      funds: (c.funds ||0) - research.cost,
      researches: (c.researches || []).map((r: Research) =>
        r.id === researchId ? { ...r, invested: true } : r
      )
    };
  });
  pushToast({ type: 'success', message: 'Research investment paid' });
};


// Losowe eventy w tickCallback
const randomEvents: {
 type: string;
 title: string;
 description: string;
 effect: {
 funds?: number;
 reputation?: number;
 morale?: number;
 productivity?: number;
 employeeId?: string | null;
 investorBonus?: number;
 };
}[] = [
 {
 type: 'crisis', title: 'Market Crash', description: 'Global market crash affects your company!', effect: { funds: -2000, reputation: -10 }
 },
 {
 type: 'bonus', title: 'Tech Grant', description: 'You received a government tech grant!', effect: { funds:3000, reputation:5 }
 },
 {
 type: 'market_change', title: 'Trend Shift', description: 'Market trends shift, designers are in demand!', effect: { morale:10, productivity:5 }
 },
 {
 type: 'random', title: 'Team Building', description: 'Successful team building event boosts morale.', effect: { morale:15 }
 },
 // Nowe eventy
 {
 type: 'employee_sick', title: 'Employee Sick', description: 'One of your employees is sick and cannot work today.', effect: { employeeId: null, productivity: -20, morale: -10 }
 },
 {
 type: 'equipment_failure', title: 'Equipment Failure', description: 'A piece of office equipment failed, productivity drops.', effect: { productivity: -15, funds: -500 }
 },
 {
 type: 'investor_visit', title: 'Investor Visit', description: 'An investor visits your company and offers a bonus!', effect: { funds:2000, reputation:10, investorBonus:2000 }
 }
];

function maybeTriggerEvent(state: any) {
 if (Math.random() <0.10) { //10% szansa na event co tick
 let ev = randomEvents[Math.floor(Math.random() * randomEvents.length)];
 // obsługa losowego pracownika dla eventu choroby
 if (ev.type === 'employee_sick' && Array.isArray(state.employees) && state.employees.length >0) {
 const sickEmp = state.employees[Math.floor(Math.random() * state.employees.length)];
 ev = { ...ev, effect: { ...ev.effect, employeeId: sickEmp.id } };
 }
 const eventObj = {
 id: Date.now().toString(36) + Math.random().toString(36).slice(2,6),
 ...ev,
 day: state.day
 };
 // Zastosuj efekt eventu
 let updated = { ...state };
 if (ev.effect.funds) updated.funds = (updated.funds ||0) + ev.effect.funds;
 if (ev.effect.reputation) updated.reputation = (updated.reputation ||0) + ev.effect.reputation;
 if (ev.effect.morale) updated.employees = (updated.employees || []).map((e: any) => ({ ...e, morale: (e.morale ||0) + ev.effect.morale }));
 if (ev.effect.productivity) {
 if (ev.type === 'employee_sick' && ev.effect.employeeId) {
 updated.employees = (updated.employees || []).map((e: any) => e.id === ev.effect.employeeId ? { ...e, productivity: Math.max(0, (e.productivity ||0) + ev.effect.productivity), morale: (e.morale ||0) + ev.effect.morale } : e);
 } else {
 updated.employees = (updated.employees || []).map((e: any) => ({ ...e, productivity: Math.max(0, (e.productivity ||0) + ev.effect.productivity) }));
 }
 }
 updated.gameEvents = [eventObj, ...(updated.gameEvents || [])];
 updated.events = [`${new Date().toLocaleTimeString()} — EVENT: ${ev.title} (${ev.description})`, ...(updated.events || [])];
 return updated;
 }
 return state;
}

  useEffect(() => {
    if (showMainMenu && tickManagerRef.current) {
      tickManagerRef.current.stop();
      setTickSpeed(0);
    }
  }, [showMainMenu]);

  const handleNewGame = () => {
    const fresh = refreshContracts(createEmptyCompany(), true);
    setCompany(fresh);
    setShowMainMenu(false);
    setCanContinue(false);
    pushToast({ type: 'info', message: 'New game started' });
  };

  const handleContinueGame = async () => {
    const success = await handleLoadGame('autosave', { silent: true });
    if (success) {
      setShowMainMenu(false);
      pushToast({ type: 'success', message: 'Autosave loaded' });
    } else {
      pushToast({ type: 'warning', message: 'No autosave found' });
    }
  };

  const handleLoadFromMenu = async () => {
    const success = await handleLoadGame();
    if (success) setShowMainMenu(false);
  };

  const handleExitGame = () => {
    if (typeof window !== 'undefined') {
      if (window.electronAPI?.invoke) {
        window.electronAPI.invoke('app-exit');
      } else {
        window.close();
      }
    }
  };

  const openOptionsOverlay = () => setShowOptionsOverlay(true);
  const closeOptionsOverlay = () => setShowOptionsOverlay(false);

  const CONTRACT_REFRESH_INTERVAL_DAYS = 4;
  const CONTRACT_MANUAL_REFRESH_COST = 500;

  function refreshContracts(state: any, force = false) {
    const day = state.day ?? 1;
    const nextRefreshDay = state.nextContractRefreshDay ?? day;
    if (!force && day < nextRefreshDay) return state;
    const reputation = state.reputation ?? 100;
    const offerCount = Math.min(6, 4 + Math.floor(reputation / 90));
    const existing = (state.contracts || []).filter((c: any) => c.status && c.status !== 'available' && c.status !== 'locked');
    const generated = generateContractsBatch({ reputation, day, count: offerCount });
    return {
      ...state,
      contracts: [...existing, ...generated],
      lastContractRefreshDay: day,
      nextContractRefreshDay: day + CONTRACT_REFRESH_INTERVAL_DAYS,
    };
  }

  const handleManualContractRefresh = () => {
    setCompany((current: any) => {
      const funds = current.funds || 0;
      if (funds < CONTRACT_MANUAL_REFRESH_COST) {
        pushToast({ type: 'warning', message: 'Not enough funds to refresh offers' });
        return current;
      }
      const afterCost = { ...current, funds: funds - CONTRACT_MANUAL_REFRESH_COST };
      const refreshed = refreshContracts(afterCost, true);
      pushToast({ type: 'info', message: 'Contract board refreshed' });
      return refreshed;
    });
  };

  const handleAcceptContract = (contractId: string) => {
    setCompany((current: any) => {
      const contracts = current.contracts || [];
      const contract = contracts.find((c: any) => c.id === contractId);
      if (!contract) {
        pushToast({ type: 'error', message: 'Contract not found' });
        return current;
      }
      if (contract.status === 'locked') {
        pushToast({ type: 'warning', message: 'Reputation too low for this contract' });
        return current;
      }
      if (contract.status === 'claimed') {
        pushToast({ type: 'warning', message: 'Competitor already claimed this contract' });
        return current;
      }
      if (contract.status !== 'available') {
        pushToast({ type: 'info', message: 'Contract already handled' });
        return current;
      }

      const dueDay = (current.day ?? 1) + (contract.durationDays ?? 10);
      const effort = contract.expectedEffort ?? Math.max(80, Math.round(contract.reward / 40));
      const projectId = `contract_${contract.id}`;
      const newProject: Project = {
        id: projectId,
        name: contract.name,
        description: contract.description,
        effort,
        progress: 0,
        reward: contract.reward,
        requiredRoles: contract.requiredRoles,
        assignees: [],
        createdAt: new Date().toISOString(),
        status: 'active',
        deadline: contract.deadline,
        deadlineDay: dueDay,
        penalty: contract.penalty,
        contractId: contract.id,
      };

      pushProjectEvent(`Contract accepted: ${contract.name}`);

      return {
        ...current,
        projects: [...(current.projects || []), newProject],
        contracts: contracts.map((c: any) =>
          c.id === contractId
            ? { ...c, status: 'accepted', assignedProjectId: projectId, dueDay: dueDay }
            : c
        ),
      };
    });
  };

  const handleRentOffice = (officeId: string) => {
    setCompany((c: any) => ({
      ...c,
      offices: (c.offices || []).map((o: Office) =>
        o.id === officeId ? { ...o, owned: true } : o
      ),
      selectedOfficeId: officeId,
    }));
    pushToast({ type: 'success', message: 'Office rented' });
  };

  const handleAssignDesk = (officeId: string, deskId: string, employeeId: string) => {
    setCompany((c: any) => ({
      ...c,
      offices: (c.offices || []).map((o: Office) =>
        o.id !== officeId
          ? o
          : {
              ...o,
              desks: o.desks.map(d =>
                d.id === deskId ? { ...d, assignedEmployeeId: employeeId || undefined } : d
              ),
            }
      ),
    }));
    pushToast({ type: 'info', message: employeeId ? 'Employee assigned to desk' : 'Desk cleared' });
  };

  const handleUpgradeDesk = (officeId: string, deskId: string, upgradeId: string) => {
    setCompany((c: any) => ({
      ...c,
      offices: (c.offices || []).map((o: Office) =>
        o.id !== officeId
          ? o
          : {
              ...o,
              desks: o.desks.map(d =>
                d.id === deskId
                  ? {
                      ...d,
                      upgrades: [
                        ...(d.upgrades || []),
                        { id: upgradeId, name: 'Ergonomic Pack', cost: 0, effect: { productivity: 10, morale: 5 } },
                      ],
                    }
                  : d
              ),
            }
      ),
    }));
    pushToast({ type: 'success', message: 'Desk upgraded' });
  };

  function simulateCompetitors(state: any) {
 let updated = { ...state };
 const contracts = [...(updated.contracts || [])];
 const logMessages: string[] = [];
 updated.competitors = (updated.competitors || []).map((comp: any) => {
   let funds = comp.funds || 0;
   let reputation = comp.reputation || 50;
   const ambition = Math.min(0.4, 0.1 + (comp.aiLevel || 1) * 0.08);
   const availableContracts = contracts.filter(c => c.status === 'available' && (c.minReputation || 0) <= reputation);
   if (availableContracts.length > 0 && Math.random() < ambition) {
     const target = availableContracts.sort((a, b) => (b.reward || 0) - (a.reward || 0))[0];
     target.status = 'claimed';
     target.claimedBy = comp.name;
     funds += target.reward * 0.6;
     reputation += 4 + Math.round(target.reward / 2000);
     logMessages.push(`${comp.name} claimed ${target.name}`);
   } else {
     const marketDrift = (Math.random() - 0.5) * (600 + (comp.aiLevel || 1) * 200);
     funds = Math.max(0, funds + marketDrift);
     reputation = Math.max(30, reputation + (marketDrift > 0 ? 1 : -1));
   }
   return {
     ...comp,
     funds: Math.round(funds),
     reputation: Math.round(reputation),
     completedContracts: comp.completedContracts || 0
   };
 });
 if (logMessages.length) {
   updated.events = logMessages.map(msg => `${new Date().toLocaleTimeString()} — MARKET: ${msg}`).concat(updated.events || []);
 }
 updated.contracts = contracts;
 return updated;
}

  useEffect(() => {
    const interval = setInterval(() => {
      setCompany((c: any) => simulateCompetitors(c));
    }, 10000); // symulacja co 10 sekund
    return () => clearInterval(interval);
  }, []);

  // Synchronizacja postępu kontraktów z projektami
function syncContractsWithProjects(state: any) {
  if (!state.contracts) return state;
  const updated = { ...state };
  const projectMap = new Map<string, Project>(((state.projects || []) as Project[]).map((p: Project) => [p.id, p]));
  const day = state.day ?? 1;
  updated.contracts = (state.contracts || []).map((contract: any) => {
    if (contract.assignedProjectId) {
      const project = projectMap.get(contract.assignedProjectId);
      if (project) {
        const progressPct = project.effort ? Math.round((project.progress / project.effort) * 100) : 0;
        let status = contract.status;
        if (project.completed) status = 'completed';
        if (project.failed) status = 'expired';
        return { ...contract, progress: progressPct, status, dueDay: contract.dueDay ?? project.deadlineDay };
      }
    }
    if (contract.status === 'accepted' && contract.dueDay && day > contract.dueDay) {
      return { ...contract, status: 'expired' };
    }
    return contract;
  });
  return updated;
}

  return (
    <div className={`app-root ${darkMode ? 'dark' : ''}`}>
      <aside className="side-nav">
        <div className="nav-group">
          {menuTabs.map(tab => (
            <button
              key={tab.key}
              className={activeTab === tab.key ? 'active' : ''}
              onClick={() => setActiveTab(tab.key)}
              title={tab.label}
            >
              {tab.icon}
              <span>{tab.label}</span>
            </button>
          ))}
        </div>
        <div style={{ marginTop: 'auto', display: 'flex', flexDirection: 'column', gap: 8 }}>
          <button className="accent" onClick={() => setDarkMode(d => !d)}>
            {darkMode ? 'Light Mode' : 'Dark Mode'}
          </button>
        </div>
      </aside>
      <header className="app-hud">
        <div className="hud-top">
          <div className="hud-stat">
            <div style={{ fontSize: 12, opacity: 0.7 }}>Game Day</div>
            <div style={{ fontSize: 20 }}>{company.gameDay ?? gameDay}</div>
          </div>
          <div className="hud-stat">
            <div style={{ fontSize: 12, opacity: 0.7 }}>Current Time</div>
            <div style={{ fontSize: 20 }}>{(company.gameHour ?? gameHour).toString().padStart(2,'0')}:00</div>
          </div>
          
          <div className="hud-stat">
            <div style={{ fontSize: 12, opacity: 0.7 }}>Funds</div>
            <div style={{ fontSize: 20 }}>{(company.funds || 0).toLocaleString()}</div>
          </div>
          <div className="hud-stat">
            <div style={{ fontSize: 12, opacity: 0.7 }}>Reputation</div>
            <div style={{ fontSize: 20 }}>{company.reputation ?? 100}</div>
          </div>
        </div>
        <div className="hud-controls">
          <button onClick={handlePause}>Pause</button>
          <button onClick={handleNormal} className={tickSpeed === 1000 ? 'primary' : ''}>x1</button>
          <button onClick={handleMedium} className={tickSpeed === 333 ? 'primary' : ''}>x3</button>
          <button onClick={handleFast} className={tickSpeed === 200 ? 'primary' : ''}>x5</button>
          <button onClick={handleStart} className="primary">Start</button>
          <button onClick={handleSaveGame}>Save</button>
          <button onClick={handleLoadGame}>Load</button>
        </div>
      </header>
      <main className="main-stage">
        {renderActiveTab()}
      </main>
      <Toasts list={toasts} onRemove={(id)=> setToasts(s=> s.filter(x=> x.id!==id))} darkMode={darkMode} />
      {confirmProps && (
        <ConfirmationModal
          {...confirmProps}
          onClose={() => setConfirmProps(null)}
        />
      )}
      {bankruptOpen && (
        <BankruptcyModal
          open={bankruptOpen}
          funds={company.funds || 0}
          onLoan={(amt) => {
            handleLoan(amt);
            setBankruptOpen(false);
          }}
          onInvestor={() => {
            handleInvestor();
            setBankruptOpen(false);
          }}
          onRollback={() => {
            handleRollback();
            setBankruptOpen(false);
          }}
        />
      )}
      {showMainMenu && (
        <>
          <MainMenu
            canContinue={canContinue}
            onNewGame={handleNewGame}
            onContinue={handleContinueGame}
            onLoadGame={handleLoadFromMenu}
            onToggleOptions={openOptionsOverlay}
            onExit={handleExitGame}
            darkMode={darkMode}
          />
          {showOptionsOverlay && (
            <div
              style={{
                position: 'fixed',
                inset: 0,
                display: 'flex',
                alignItems: 'center',
                justifyContent: 'center',
                background: 'rgba(0,0,0,0.45)',
                zIndex: 21000,
              }}
            >
              <div
                style={{
                  width: 320,
                  padding: 24,
                  background: darkMode ? '#1f1f1f' : '#fff',
                  color: darkMode ? '#fff' : '#222',
                  borderRadius: 12,
                  boxShadow: '0 8px 30px rgba(0,0,0,0.25)'
                }}
              >
                <h2>Options</h2>
                <label style={{ display: 'flex', alignItems: 'center', gap: 8, margin: '16px 0' }}>
                  <input type="checkbox" checked={darkMode} onChange={() => setDarkMode(d => !d)} />
                  Dark mode
                </label>
                <button style={{ padding: '8px 16px', borderRadius: 6 }} onClick={closeOptionsOverlay}>Close</button>
              </div>
            </div>
          )}
        </>
      )}
    </div>
  );
};

export default App;
